<Application
    x:Class="glFTPd_Commander.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:glFTPd_Commander.Converters"
    xmlns:local="clr-namespace:glFTPd_Commander"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="FrameworkElement">
                <Setter Property="ToolTipService.InitialShowDelay" Value="10" />
                <Setter Property="ToolTipService.ShowDuration" Value="10000" />
                <Setter Property="ToolTipService.BetweenShowDelay" Value="10" />
            </Style>
            <conv:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
