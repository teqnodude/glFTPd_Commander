<local:BaseWindow
    x:Class="glFTPd_Commander.Windows.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:glFTPd_Commander.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FTP Connection Settings"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Width="300"
            Content="Connections:" />
        <ComboBox
            x:Name="ConnectionsComboBox"
            Grid.Row="1"
            Margin="0,0,0,10"
            DisplayMemberPath="Name"
            SelectionChanged="ConnectionsComboBox_SelectionChanged" />
        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="AddConnectionButton"
                Margin="0,0,10,0"
                Click="AddConnectionButton_Click"
                Content="Add Connection" />
            <Button
                x:Name="RemoveConnectionButton"
                Click="RemoveConnectionButton_Click"
                Content="Remove" />
        </StackPanel>
        <Label Grid.Row="3" Content="Connection Name:" />
        <TextBox
            x:Name="ConnectionNameTextBox"
            Grid.Row="4"
            Margin="0,0,0,10"
            GotFocus="MoveCaretToEnd" />

        <Label Grid.Row="5" Content="Username:" />
        <TextBox
            x:Name="UsernameTextBox"
            Grid.Row="6"
            Margin="0,0,0,10"
            GotFocus="MoveCaretToEnd" />

        <Label Grid.Row="7" Content="Password:" />
        <Grid Grid.Row="8" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <PasswordBox x:Name="PasswordBox" Grid.Column="0" />
            <TextBox
                x:Name="PasswordVisibleTextBox"
                Grid.Column="0"
                GotFocus="MoveCaretToEnd"
                Visibility="Collapsed" />
        </Grid>

        <Label Grid.Row="9" Content="Server:" />
        <TextBox
            x:Name="ServerTextBox"
            Grid.Row="10"
            Margin="0,0,0,10"
            GotFocus="MoveCaretToEnd" />

        <Label Grid.Row="11" Content="Port:" />
        <TextBox
            x:Name="PortTextBox"
            Grid.Row="12"
            Margin="0,0,0,10"
            GotFocus="MoveCaretToEnd" />

        <Label Grid.Row="13" Content="SSL Mode:" />
        <ComboBox
            x:Name="SslModeComboBox"
            Grid.Row="14"
            Margin="0,0,0,10"
            SelectedIndex="0">
            <ComboBoxItem Tag="Explicit">Explicit (AUTH TLS)</ComboBoxItem>
            <ComboBoxItem Tag="Implicit">Implicit</ComboBoxItem>
        </ComboBox>

        <Label Grid.Row="15" Content="Connection Type:" />
        <ComboBox
            x:Name="ConnectionTypeComboBox"
            Grid.Row="16"
            Margin="0,0,0,10">
            <ComboBoxItem Tag="PASV">Passive (PASV)</ComboBoxItem>
            <ComboBoxItem Tag="PORT">Active (PORT)</ComboBoxItem>
        </ComboBox>
        <StackPanel
            Grid.Row="17"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="SaveButton"
                Margin="0,0,10,0"
                Click="SaveButton_Click"
                Content="Save"
                IsDefault="True" />
            <Button
                x:Name="CancelButton"
                Click="CancelButton_Click"
                Content="Cancel"
                IsCancel="True" />
        </StackPanel>
    </Grid>

</local:BaseWindow>