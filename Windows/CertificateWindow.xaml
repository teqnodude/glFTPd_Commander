<Window x:Class="glFTPd_Commander.CertificateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SSL Certificate Details" Height="400" Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Server Certificate Details:" FontWeight="Bold"/>

        <TextBox x:Name="CertificateDetailsTextBox"
         Grid.Row="1"
         IsReadOnly="True"
         VerticalScrollBarVisibility="Auto"
         HorizontalScrollBarVisibility="Auto"
         TextWrapping="Wrap"
         Margin="0,5,0,10"/>

        <CheckBox x:Name="RememberCertificateCheckBox"
          Grid.Row="2"
          Content="Remember this certificate"
          Margin="0,0,0,10"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="AcceptButton" Content="Accept" Width="80" Margin="0,0,10,0" Click="AcceptButton_Click"/>
            <Button x:Name="RejectButton" Content="Reject" Width="80" Click="RejectButton_Click"/>
        </StackPanel>

    </Grid>
</Window>