<local:BaseWindow
    x:Class="glFTPd_Commander.Windows.CustomCommandConfigWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:glFTPd_Commander.Windows"
    Title="Configure Custom Command"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="SITE Command:" />
        <TextBox
            x:Name="SiteCommandTextBox"
            Grid.Row="0"
            Grid.Column="1"
            Width="360"
            Margin="0,0,0,10" />
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Button Label (optional):" />
        <TextBox
            x:Name="ButtonLabelTextBox"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,0,15" />
        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="OkButton"
                Margin="0,0,10,0"
                Click="OkButton_Click"
                Content="OK"
                IsDefault="True" />
            <Button
                x:Name="CancelButton"
                Click="CancelButton_Click"
                Content="Cancel"
                IsCancel="True" />
        </StackPanel>
    </Grid>

</local:BaseWindow>
