<local:BaseWindow
    x:Class="glFTPd_Commander.Windows.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:glFTPd_Commander.Windows"
    Title="About"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,10"
            Content="glFTPd Commander"
            FontSize="16"
            FontWeight="Bold" />
        <Label
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="0,0,0,10"
            Content="Version: 1.0.2" />
        <Label
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="0,0,0,10"
            Content="Author: teqnodude" />
        <Label
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="0,0,0,0"
            Content="Project URL:"
            FontWeight="Bold" />
        <Label Grid.Row="4" Grid.ColumnSpan="2">
            <Hyperlink NavigateUri="https://github.com/teqnodude/glFTPd_Commander" RequestNavigate="ProjectUrlHyperlink_RequestNavigate">
                https://github.com/teqnodude/glFTPd_Commander
            </Hyperlink>
        </Label>
        <StackPanel
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label
                x:Name="UpdateStatusTextBlock"
                VerticalAlignment="Center"
                Content="Checking for updates..."
                FontStyle="Italic"
                Foreground="Gray"
                Visibility="Collapsed" />
            <Button
                x:Name="UpdateButton"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Click="UpdateButton_Click"
                Content="Update"
                Visibility="Collapsed" />
        </StackPanel>
    </Grid>

</local:BaseWindow>
