<local:BaseWindow
    x:Class="glFTPd_Commander.Windows.AddUserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:glFTPd_Commander.Windows"
    Title="Add New User"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Width="300"
            Content="Username:" />
        <TextBox
            x:Name="UsernameTextBox"
            Grid.Row="1"
            Margin="0,0,0,10" />
        <Label Grid.Row="2" Content="Password:" />
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <PasswordBox x:Name="PasswordBox" Grid.Column="0" />
            <TextBox
                x:Name="PasswordVisibleTextBox"
                Grid.Column="0"
                Visibility="Collapsed" />
        </Grid>
        <Label Grid.Row="4" Content="Group:" />
        <ComboBox
            x:Name="GroupsComboBox"
            Grid.Row="5"
            Margin="0,0,0,10" />
        <Label Grid.Row="6" Content="IP Address:" />
        <TextBox
            x:Name="IpTextBox"
            Grid.Row="7"
            Margin="0,0,0,10" />
        <StackPanel
            Grid.Row="8"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="AddButton"
                Margin="0,0,10,0"
                Click="AddButton_Click"
                Content="Add"
                IsDefault="True" />
            <Button
                x:Name="CancelButton"
                Click="CancelButton_Click"
                Content="Cancel"
                IsCancel="True" />
        </StackPanel>
    </Grid>

</local:BaseWindow>